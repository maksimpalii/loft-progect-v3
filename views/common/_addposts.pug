block content
    .test-content
        .form-container
            form.form#blog( method="POST")
                .form__subtitle Добавить запись в блог
                .status
                label.form__input-line
                    input(name="title" type="text" placeholder="Заголовок").form__input
                label.form__input-line
                    input(name="date" type="text" placeholder="Дата").form__input
                textarea(placeholder="Ваша запись" name="text").form__textarea
                .form__btns.form__input-line
                    input(name="" type="submit" value="Отправить").form__btn-send
                    input(name="" type="reset" value="Очистить").form__btn-reset